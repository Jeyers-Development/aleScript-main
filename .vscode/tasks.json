{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build AleScript",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "command": "sh",
      "args": ["-c", "./Build.sh"],
      "windows": {
        "command": "Build.bat",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "executable": "cmd.exe",
            "args": ["/c"]
          }
        }
      }
    }
  ]
}
